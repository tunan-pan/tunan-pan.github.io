---
layout: base.njk
---

<article class="project-post">
  {% if categories %}
    <span class="project-categories">
      {% for category in categories %}
        <a href="/categories/{{ category | slug }}/">{{ category }}</a>{% if not loop.last %} {% endif %}
      {% endfor %}
    </span>
  {% endif %}
  
  <h1>{{ title }}</h1>
  
  {% if image %}
    <img src="{{ image }}" alt="" class="project-hero-image">
  {% endif %}
  
  <div class="project-meta">
    {% if tags %}
      <span class="project-tags">
        {% for tag in tags %}
          <a href="/tags/{{ tag | slug }}/">{{ tag }}</a>{% if not loop.last %}, {% endif %}
        {% endfor %}
      </span>
    {% endif %}
  </div>
  
  <div class="project-content">
    {{ content | safe }}
  </div>
  
  <a href="/projects/">‚Üê Back to Projects</a>
</article>